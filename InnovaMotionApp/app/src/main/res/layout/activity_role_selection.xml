<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/md_theme_light_background">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome!\nChoose how you want to continue:"
        android:textSize="20sp"
        android:textColor="@color/primary_text"
        android:textAlignment="center"
        android:lineSpacingMultiplier="1.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_continue_as_collector"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continue_as_collector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Continue as Collector"
        android:textSize="16sp"
        android:padding="16dp"
        app:icon="@drawable/baseline_bluetooth_connected_24"
        app:iconGravity="textStart"
        app:layout_constraintTop_toBottomOf="@id/welcome_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_continue_as_supervisor" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continue_as_supervisor"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Continue as Supervisor"
        android:textSize="16sp"
        android:padding="16dp"
        app:icon="@drawable/ic_people"
        app:iconGravity="textStart"
        app:layout_constraintTop_toBottomOf="@id/btn_continue_as_collector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
