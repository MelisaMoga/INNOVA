<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header with stats -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/chip_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/dbStatsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/db_stats"
            android:textStyle="bold"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Scenario selection label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_scenario"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Scrollable scenario list -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:maxHeight="300dp"
        android:fadeScrollbars="false"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <!-- Scenario RadioGroup -->
        <RadioGroup
            android:id="@+id/scenarioRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Basic Multi-Person -->
            <RadioButton
                android:id="@+id/radioBasicMultiPerson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scenario_basic_multi_person_title"
                android:checked="true"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scenario_basic_multi_person_desc"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:paddingStart="36dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp" />

            <!-- Fall Detection -->
            <RadioButton
                android:id="@+id/radioFallDetection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scenario_fall_detection_title"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scenario_fall_detection_desc"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:paddingStart="36dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp" />

            <!-- Stale Data -->
            <RadioButton
                android:id="@+id/radioStaleData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scenario_stale_data_title"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scenario_stale_data_desc"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:paddingStart="36dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp" />

            <!-- High Volume -->
            <RadioButton
                android:id="@+id/radioHighVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scenario_high_volume_title"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scenario_high_volume_desc"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:paddingStart="36dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp" />

            <!-- Name Resolution -->
            <RadioButton
                android:id="@+id/radioNameResolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scenario_name_resolution_title"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scenario_name_resolution_desc"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:paddingStart="36dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp" />

            <!-- Mixed States -->
            <RadioButton
                android:id="@+id/radioMixedStates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scenario_mixed_states_title"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scenario_mixed_states_desc"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:paddingStart="36dp"
                android:paddingEnd="8dp" />

        </RadioGroup>

    </ScrollView>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Sync to Firestore toggle -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchSyncToFirestore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sync_to_firestore"
        android:checked="false"
        android:layout_marginBottom="8dp" />

    <!-- Progress indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="true"
        android:layout_marginBottom="8dp" />

    <!-- Status text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="8dp" />

    <!-- Action buttons - always visible at bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_all_data"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@android:color/holo_red_dark" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRunScenario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/run_scenario"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</LinearLayout>
