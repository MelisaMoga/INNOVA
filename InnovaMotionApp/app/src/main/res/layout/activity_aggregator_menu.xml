<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activities.AggregatorMenuActivity">

        <!-- Sign out button in top-right corner -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/sign_out"
            android:textSize="12sp"
            app:icon="@android:drawable/ic_menu_close_clear_cancel"
            app:iconSize="16dp"
            style="@style/Theme.InnovaMotionApp.Button.Secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Menu title -->
        <TextView
            android:id="@+id/menu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aggregator_menu_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <!-- Bluetooth Settings button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bluetooth_settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/btn_bluetooth_settings"
            android:minWidth="220dp"
            app:icon="@drawable/baseline_bluetooth_connected_24"
            app:iconGravity="start"
            style="@style/Theme.InnovaMotionApp.Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menu_title" />

        <!-- Dashboard button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/dashboard_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/btn_dashboard"
            android:minWidth="220dp"
            app:icon="@drawable/ic_list"
            app:iconGravity="start"
            style="@style/Theme.InnovaMotionApp.Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bluetooth_settings_button" />

        <!-- Hint text for disabled dashboard -->
        <TextView
            android:id="@+id/dashboard_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/dashboard_no_data_hint"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dashboard_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
