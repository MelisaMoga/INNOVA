<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".activities.BtSettingsActivity">

    <!-- Sign out button in top-right corner -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/sign_out"
        android:textSize="12sp"
        app:icon="@android:drawable/ic_menu_close_clear_cancel"
        app:iconSize="16dp"
        style="@style/Theme.InnovaMotionApp.Button.Secondary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- STATUS CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statusCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:layout_constraintTop_toBottomOf="@id/sign_out_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <!-- Bluetooth Status Icon -->
            <ImageView
                android:id="@+id/statusIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/baseline_bluetooth_24"
                android:contentDescription="@string/bluetooth_status"
                app:tint="?attr/colorOnSurfaceVariant" />

            <!-- Connection Status Text -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/bt_status_disconnected"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <!-- Device Name (visible when connected) -->
            <TextView
                android:id="@+id/deviceNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/bt_no_device"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="Connected to: HC-05" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ACTION BUTTON (Dynamic: Scan / Disconnect) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAction"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="@string/bt_scan_for_devices"
        android:textSize="16sp"
        style="@style/Theme.InnovaMotionApp.Button"
        app:icon="@drawable/baseline_bluetooth_searching_24"
        app:iconGravity="textStart"
        app:layout_constraintTop_toBottomOf="@id/statusCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- DEVICE LIST SECTION (Hidden when connected) -->
    <LinearLayout
        android:id="@+id/deviceListContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/btnAction"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Section Header -->
        <TextView
            android:id="@+id/deviceListHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_available_devices"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:paddingBottom="8dp" />

        <!-- Device List -->
        <ListView
            android:id="@+id/deviceListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
